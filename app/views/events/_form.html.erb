<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="style">
	
<div class="addevent">
	Step 1. Choose one: <br><br> 
		<%= f.select 'verb', ['Create', 'Discuss', 'Go', 'Invent', 'Just', 'Launch', 'Meet', 'Play', 'Start', 'Study'] %> <br>
	Step 2. What would you like to do? <br><br>
		<%= f.text_field :name, :placeholder => 'amazing things..'  %> 
<br>
	Step 3. How many people do want to join you? <br><br>
		<%= f.select 'people', ['2 people.' , '3 people.', '4 people.', '5 people.' , '6 people.' , '7 people.', '8 people.', '9 people.', '10 people.', '11 people.', '12 people.'] %> 

<br>	
	Step 4. Add some tags:<br><br>
		<%= f.text_field :tag_list, :placeholder => "fun, creative, the future..", :style => "width:60%;" %>
    	<%= f.submit %>
</div>
</div>

	

	


<% end %>
