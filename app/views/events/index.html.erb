
	<div class="style3">
	<div class="mainbody">	
		
	
		<div class="searchindex">
		<form class="form-search">
		<%= search_form_for @search do |f| %>
		<div class="searchbarbackground">
		<div class="searchbar">
		<%= f.text_field :name_cont, :placeholder => "Search For Events", :class => "searchbar" %>
		<button type="submit" class="searchbutton">Search</button>
		</div>
		</div>
	
		<%= form_tag events_path, :method => :get do %>
		<div class="searchbarbackground2">
		<div class="searchbar2">
		<%= text_field_tag :search, params[:search],:placeholder => "Search For Location", :class => "searchbar2" %>
	
		<button type="submit" class="searchbutton">Near you</button>
		</div>
		</div>
		<% end %>
			<% end %>
		</form>
		</div>
<%= ajax_section :id => "page", :render => "page" %>

		<div class="rightside">		
			<!-- Button to trigger modal -->
			<a href="#myModal" role="button" class="modalbutton" data-toggle="modal">New qkmeet</a>

			<!-- Modal -->
			<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-header">
			    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			    <h3 id="myModalLabel">New qkmeet</h3>
			  </div>
			  <div class="modal-body">
			    <p><%= render 'form' %></p>
			  </div>
			  <div class="modal-footer">
			    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
			    <button class="btn btn-primary">Submit</button>
			  </div>
			</div>
			<br>
			
			<div class="toptagssection">
					<h3>Top Tags</h3>
				<% @tags = Event.tag_counts %> 
				<% @tags.order('count DESC').limit('10').each do |tag| %>
				<div class="toptags">
				<%= link_to "#" + tag.name, tagged_url(:tag => tag.name) %><br>
				</div>
				<% end %>
			</div>	
	
			
		</div>
		
	</div>
	</div>